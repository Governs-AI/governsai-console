{
    "compilerOptions": {
      "target": "es2022",
      "lib": ["es2022"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false,
      "rootDir": ".",
      "outDir": "dist",
      "types": ["node"]
    },
    "include": ["."],
    "exclude": ["node_modules", "dist"]
  }
  