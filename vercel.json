{
  "rewrites": [
    {
      "source": "/docs/(.*)",
      "destination": "${DOCS_APP_URL}/docs/$1"
    },
    {
      "source": "/app/(.*)",
      "destination": "${PLATFORM_APP_URL}/app/$1"
    },
    {
      "source": "/(.*)",
      "destination": "${LANDING_APP_URL}/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
