# GovernsAI WebSocket Service Environment Configuration

# Service Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (shared with main platform)
DATABASE_URL="postgresql://username:password@localhost:5432/governs_db"

# JWT Configuration (must match main platform)
JWT_SECRET="your-super-secret-jwt-key-here"

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3002,https://governs.ai,https://your-domain.com"

# Service URLs
PLATFORM_URL="http://localhost:3002"
WEBSOCKET_URL="ws://localhost:3000/ws"

# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="json"

# Performance Configuration
MAX_CONNECTIONS=10000
MESSAGE_RATE_LIMIT=1000
HEARTBEAT_INTERVAL=30000
CONNECTION_TIMEOUT=60000

# Cache Configuration
CACHE_MAX_SIZE=10000
CACHE_EXPIRY_MS=1800000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Security Configuration
API_RATE_LIMIT=100
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_HELMET=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Configuration
ENABLE_DEBUG=false
VERBOSE_LOGGING=false
