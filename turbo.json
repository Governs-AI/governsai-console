{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": [
    "CHARS_PER_TOKEN",
    "CHUNK_JOB_RETRIES",
    "CHUNK_RETRY_DELAY",
    "CHUNK_WORKER_CONCURRENCY",
    "COHERE_API_KEY",
    "DATABASE_URL",
    "DEBUG_REDIS",
    "DEDUP_THRESHOLD",
    "EMBEDDING_PROVIDER",
    "ENABLE_S3_ARCHIVE",
    "GOVERNS_WEBHOOK_SECRET",
    "HIGH_TIER_COUNT",
    "HIGH_TIER_THRESHOLD",
    "HUGGINGFACE_API_KEY",
    "HUGGINGFACE_EMBEDDING_MODEL",
    "JWT_SECRET",
    "KEYCLOAK_ADMIN_CLIENT_ID",
    "KEYCLOAK_ADMIN_CLIENT_SECRET",
    "KEYCLOAK_BASE_URL",
    "KEYCLOAK_REALM",
    "KEYCLOAK_SYNC_PASSWORD_ENCRYPTION_KEY",
    "KEYCLOAK_SYNC_WORKER_TOKEN",
    "KEYCLOAK_TEST_PASSWORD",
    "LOW_TIER_COUNT",
    "LOW_TIER_THRESHOLD",
    "MAX_CONTENT_SIZE",
    "MAX_CONTEXT_TOKENS",
    "MAX_RESULTS",
    "MAX_SUMMARY_LENGTH",
    "MEDIUM_TIER_COUNT",
    "MEDIUM_TIER_THRESHOLD",
    "MIN_SIMILARITY",
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_PLATFORM_URL",
    "NEXT_PUBLIC_RP_ID",
    "NEXT_PUBLIC_WEBSOCKET_URL",
    "NODE_ENV",
    "OLLAMA_BASE_URL",
    "OLLAMA_EMBEDDING_MODEL",
    "OPENAI_API_KEY",
    "OVERQUERY_MULTIPLIER",
    "PASSWORD_PEPPER",
    "PGVECTOR_DIM",
    "PORT",
    "PRECHECK_URL",
    "RECENCY_DECAY_DAYS",
    "RECENCY_WEIGHT",
    "REDIS_HOST",
    "REDIS_PORT",
    "REFRAG_CHUNK_SIZE",
    "REFRAG_COMPRESSION_RATIO",
    "REFRAG_ENABLED",
    "REFRAG_MIN_CHUNK_LENGTH",
    "RESEND_API_KEY",
    "S3_ARCHIVE_BUCKET",
    "SIMILARITY_WEIGHT",
    "TOKEN_BUDGET",
    "VERCEL_URL",
    "WEBHOOK_SECRET",
    "npm_package_version"
  ],
  "tasks": {
    "generate": {
      "outputs": ["packages/db/generated/**", "node_modules/.prisma/**"]
    },
    "build": {
      "dependsOn": ["^build", "generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "dist/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@governs-ai/layout#build": {
      "outputs": []
    },
    "@governs-ai/db#generate": {
      "outputs": ["packages/db/generated/**", "node_modules/.prisma/**"]
    },
    "@governs-ai/billing#build": {
      "dependsOn": [],
      "outputs": []
    },
    "@governs-ai/websocket-service#build": {
      "outputs": []
    }
  }
}
